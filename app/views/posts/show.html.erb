
<div class="post-content">
  <h1 class="show-title"><%= @post.title %><br></h1>
  <p class="show-p"><%= @post.content %></p>

<% if user_signed_in? %>
  <%= link_to "Edit", edit_post_path(@post), class: "show-buttons" %>
  <%= link_to "Delete", post_path(@post), method: :delete,
                        data: { confirm: "Are you sure you want to delete this?"}, class: "show-buttons" %>
<% end %>
</div>
