
<div class="post-content">
  <h1 class="show-title"><%= @post.title %><br></h1>
  <p class="show-p"><%= @post.content %></p>

  <div class="comments">
    <h5><%=  pluralize( @post.comments.count, 'comment' ) %></h5>

    <p><%= render @post.comments %></p>
    <h3>Comment:</h3>
    <%= render 'comments/form' %>
  </div>

  <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, root_path, class: "show-buttons" %>&nbsp;&nbsp;


<% if user_signed_in? %>
  <%= link_to "Edit", edit_post_path(@post), class: "show-buttons" %>
  <%= link_to "Delete", post_path(@post), method: :delete,
                        data: { confirm: "Are you sure you want to delete this?"}, class: "show-buttons-red" %>
<% end %>
</div>
